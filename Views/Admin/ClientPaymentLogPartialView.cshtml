@model IEnumerable<CMS_Brian.Models.PaymentLog.PaymentResponse>
@using System.Globalization;

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg breadcrumb-sec">
        <div class="kt-portlet__head-label">
            <h4>
                <a href="/Admin/Client" class="kt-menu__link ">
                    <i class="kt-menu__link-icon flaticon-users"><span></span></i>
                    <span class="kt-menu__link-text">Clients List</span>
                </a>
                <span> > &nbsp; </span>
                <span class="kt-menu__link-text">@ViewBag.ClientName</span>
                <span> > &nbsp; </span>
                <i class="kt-menu__link-icon flaticon-notepad"><span></span></i>
                <span class="kt-menu__link-text">Payment Log</span>
                <span> > &nbsp; </span>
                <span class="kt-menu__link-text">$ @ViewBag.TotalPaidAmount</span>
                <span> > &nbsp; </span>
                Payment Log List
            </h4>
            <h3 class="kt-portlet__head-bred">
              
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <a href="/admin/AddPaymentLog/?ClientId=@ViewBag.ClientId" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        Add New
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="table-responsive">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>
                            Payment Date
                        </th>
                        <th>
                            Class Name
                        </th>
                        <th>
                            Paid Amount
                        </th>
                        <th>
                            Payment Mode
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.PaymentLogId">
                            <td>
                                @item.PaymentDate.Value.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @item.ClassName
                            </td>
                            <td>
                                @item.PaidAmount
                            </td>
                            <td>
                                @item.PaymentMode
                            </td>
                            <td>
                                <span class="dropdown">
                                    <a href="#" class="btn btn-sm btn-brand btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false">
                                        <i class="la la-ellipsis-h"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-214px, -144px, 0px);">
                                        <a class="dropdown-item" href="/Admin/AddPaymentLog/@item.PaymentLogId?mode=edit&&ClientId=@item.ClientId">
                                            <i class="la la-edit"></i> Edit
                                        </a>
                                    </div>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>

<script src="/scripts/buttons.js" type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>









