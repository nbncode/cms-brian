@model IEnumerable<CMS_Brian.Models.Admin.UserResponse.ClientResponseList>
@using CMS_Brian.Models.Others;
@using System.Globalization;


<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg breadcrumb-sec">
        <div class="kt-portlet__head-label">
            <h4>
                <a href="/Admin/Client" class="kt-menu__link ">
                    <i class="kt-menu__link-icon flaticon-users"><span></span></i>
                    <span class="kt-menu__link-text">Clients</span>
                </a>
                <span> > &nbsp; </span>
            </h4>
            <h3 class="kt-portlet__head-bred">
                Clients List
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <a href="/admin/AddClient" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        Add New
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="table-responsive">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>
                            Client Name
                        </th>
                        <th>
                            Date of Birth
                        </th>
                        <th>
                            Judge Name
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Classes
                        </th>
                        <th>
                            Payment
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.ClientId">
                            <td>
                                <a class="dropdown-item" href="/Admin/AddClient/@item.ClientId?mode=edit">
                                    @item.ClientName
                                </a>
                            </td>
                            <td>
                                @{
                                    // var dob = item.DateofBirth!=null? Convert.ToDateTime(item.DateofBirth).ToString("dd/MM/yyyy"):"";
                                }
                                @item.DateofBirth
                            </td>
                            <td>
                                @item.JudgeName
                            </td>
                            <td>
                                @item.Status
                            </td>
                            <td>
                                @item.Address
                            </td>
                            <td>
                                @item.Classes
                            </td>
                            <td>
                                @item.TotalPayment
                            </td>
                            <td>
                                <span class="dropdown">
                                    <a href="#" class="btn btn-sm btn-brand btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false">
                                        <i class="la la-ellipsis-h"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-214px, -144px, 0px);">
                                        <a class="dropdown-item" href="/Admin/AddClient/@item.ClientId?mode=edit">
                                            <i class="la la-edit"></i> Edit
                                        </a>
                                        @if (!General.IsInstructors())
                                        {
                                            <a class="dropdown-item" onclick="admin.DeleteClient(this)" href="javascript:void(0);">
                                                <i class="la la-trash"></i> Delete
                                            </a>
                                        }
                                        <a class="dropdown-item" href="/Admin/AddClientsClass/?clientId=@item.ClientId">
                                            <i class="la la-plus"></i> Add Class
                                        </a>
                                        <a class="dropdown-item" href="/Admin/ClientPaymentLog/?ClientId=@item.ClientId">
                                            <i class="la la-folder"></i> Payment Logs
                                        </a>
                                        <a class="dropdown-item" href="/Admin/ClientDetails/?ClientId=@item.ClientId">
                                            <i class="la la-ellipsis-h"></i> Details
                                        </a>
                                    </div>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>

<script src="/scripts/buttons.js" type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>




