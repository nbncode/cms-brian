@model CMS_Brian.Models.Admin.Class.clsAddClassClients
@using CMS_Brian.Models;
@{

    ViewBag.Title = "Assign Class To Client";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var classId = ViewBag.ClassId;
    var clients = (List<Client>)ViewBag.ClientList;
}


<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <header class="ribbon">
        <h2>&nbsp;</h2>
    </header>
    <div class="page-content">
        <div class="page-content">
            <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="main-content">
                @{Html.RenderPartial("alerts");}
                <div class="row">
                    <div class="col-md-12">
                        <!--begin::Portlet-->
                        <div class="kt-portlet">
                            <div class="kt-portlet__head breadcrumb-sec">
                                <div class="kt-portlet__head-label">
                                    <h4>
                                        <a href="/Admin/Class" class="kt-menu__link ">
                                            <i class="kt-menu__link-icon flaticon-alert-1"><span></span></i>
                                            <span class="kt-menu__link-text">Classes</span>
                                        </a>
                                        <span> > &nbsp; </span>
                                        <a href="/Admin/ClassRoster/?ClassId=@Model.ClassId" class="kt-menu__link ">
                                            <span class="kt-menu__link-text">
                                                Class Roster List
                                            </span>
                                        </a>
                                        <span> > &nbsp; </span>
                                        <span> Assign Clients to Class (@Model.ClassName) </span>
                                    </h4>
                                    <h3 class="kt-portlet__head-bred">
                                       
                                    </h3>
                                </div>
                                <div class="kt-portlet__head-toolbar">
                                    <div class="kt-portlet__head-wrapper">
                                        <div class="kt-portlet__head-actions">
                                            <a href="@Request.UrlReferrer" class="btn btn-brand btn-elevate btn-icon-sm">
                                                <i class="la la-step-backward"></i>
                                                Back
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="kt-form">
                                    <div class="kt-portlet__body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group SeWorkshop">
                                                    <div class="row">
                                                        @if (clients.Count > 0)
                                                        {
                                                            if (Model != null && Model.ClientIds.Count > 0)
                                                            {
                                                                foreach (var item in clients)
                                                                {
                                                                    var check = Model.ClientIds.Contains(item.ClientId) ? "checked" : string.Empty;

                                                                    <div class="col-md-3">
                                                                        <div class="form-group">
                                                                            <input type="checkbox" @check class="icheck_n" name="Feature" value="@item.ClientId"><label>@item.FirstName @item.LastName</label>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                foreach (var item in clients)
                                                                {
                                                                    <div class="col-md-3">
                                                                        <div class="form-group">
                                                                            <input type="checkbox" class="icheck_n" name="@item.ClientId" value="@item.ClientId"><label>@item.FirstName @item.LastName</label>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            }

                                                        }
                                                        else
                                                        {
                                                            <h5>client not found.</h5>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="kt-portlet__foot">
                                <div class="form-group">
                                    <a href="javascript:void(0);" class="btn btn-primary text-white" onclick="admin.SaveClientsForClass('@classId')">Submit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

