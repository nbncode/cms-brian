@model IEnumerable<CMS_Brian.Models.RepoJudgeClients>
@using CMS_Brian.Models.Others;

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg breadcrumb-sec">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-menu__link-icon flaticon-users"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Clients List
            </h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="table-responsive">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>
                            Client Name
                        </th>
                        <th>
                            Date of Birth
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Phone Number
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Class Name
                        </th>
                        <th>
                            Class Count
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @item.ClientName
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            @item.ClassName
                        </td>
                        <td>
                            @item.ClassCount
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>

<script src="/scripts/buttons.js" type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>






