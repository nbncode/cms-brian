@model IEnumerable<CMS_Brian.Models.Admin.Class.ClsClassRoster>
@{
    var className = ViewBag.className;
    var classId = ViewBag.classId;
}
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg breadcrumb-sec">
        <div class="kt-portlet__head-label">
            <h4>
                <a href="/Admin/Class" class="kt-menu__link ">
                    <i class="kt-menu__link-icon flaticon-alert-1"><span></span></i>
                    <span class="kt-menu__link-text">Classes</span>
                </a>
                <span> > &nbsp; </span>

                @if (className != "")
                {
                    <span>@className >  Class Roster List</span>
                }
                else
                {
                    <span>Class Roster List</span>
                }
            </h4>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <a href="/admin/Class" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-step-backward"></i>
                        Back
                    </a>
                    <a class="btn btn-brand btn-elevate btn-icon-sm" href="/Admin/AssignClassToClient/?ClassId=@classId">
                        <i class="la la-plus"></i> Add Client
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="table-responsive">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>
                            Client Name
                        </th>
                        <th>
                            Date of Birth
                        </th>
                        <th>
                            Judge Name
                        </th>
                        <th>
                            Start Date
                        </th>
                        <th>
                            Fees
                        </th>
                        <th>
                            Paid Amount
                        </th>
                        <th>
                            Note
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.RosterId">
                            <td>
                                @item.ClientName
                            </td>
                            <td>
                                @item.DateOfBirth
                            </td>
                            <td>
                                @item.JudgeName
                            </td>
                            <td>
                                @if (item.StartDate != null)
                                {
                                    @item.StartDate.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                { @item.StartDate}

                            </td>
                            <td>
                                @item.Fees
                            </td>
                            <td>
                                @item.PaidAmount
                            </td>
                            <td>
                                @item.Note
                            </td>
                            <td>
                                <span class="dropdown">
                                    <a href="#" class="btn btn-sm btn-brand btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false">
                                        <i class="la la-ellipsis-h"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-214px, -144px, 0px);">
                                        <a class="dropdown-item" href="/Admin/AddPaymentLog/?clientId=@item.ClientId&&classId=@item.ClassId">
                                            <i class="la la-edit"></i> Add Payment
                                        </a>
                                        @*<a class="dropdown-item" href="/Admin/SaveRoster/?rosterId=@item.RosterId&&classId=@item.ClassId&&clientId=@item.ClientId">
            <i class="la la-edit"></i> Edit
        </a>*@
                                    </div>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>

<script src="/scripts/buttons.js" type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>







