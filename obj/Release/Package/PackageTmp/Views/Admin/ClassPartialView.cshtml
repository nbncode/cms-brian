@model IEnumerable<CMS_Brian.Models.Admin.Class.ClassList>
@using CMS_Brian.Models.Others;

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg breadcrumb-sec">
        <div class="kt-portlet__head-label">
            <h4>
                <a href="/Admin/Class" class="kt-menu__link ">
                    <i class="kt-menu__link-icon flaticon-alert-1"><span></span></i>
                    <span class="kt-menu__link-text">Classes</span>
                </a>
                <span> > &nbsp; </span>
            </h4>
            <h3 class="kt-portlet__head-bred">
                Classes List
            </h3>
        </div>
        @if (!General.IsInstructors())
        {
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <a href="/admin/AddClass" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            Add New
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="kt-portlet__body">
        <div class="table-responsive">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>
                            Class Name
                        </th>
                        <th>
                            Class Location
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Roster
                        </th>
                        <th>
                            Available Days
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.ClassId">
                            <td>
                                <a class="dropdown-item" href="/Admin/AddClass/@item.ClassId?mode=edit">
                                    @item.ClassName
                                </a>
                            </td>
                            <td>
                                @item.ClassLocation
                            </td>
                            <td>
                                @item.Address
                            </td>
                            <td id="classStatus">
                                @item.Status
                            </td>
                            <td>
                                <a class="dropdown-item" href="/Admin/ClassRoster/?ClassId=@item.ClassId">
                                    @item.Roster
                                </a>
                            </td>
                            <td>
                                @item.AvailableDays
                            </td>
                            <td>
                                <span class="dropdown">
                                    <a href="#" class="btn btn-sm btn-brand btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false">
                                        <i class="la la-ellipsis-h"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-214px, -144px, 0px);">
                                        <a class="dropdown-item" href="/Admin/AddClass/@item.ClassId?mode=edit">
                                            <i class="la la-edit"></i> Edit
                                        </a>
                                        <a class="dropdown-item" href="/Admin/ClassRoster/?ClassId=@item.ClassId">
                                            <i class="fa fa-ban"></i> Roster
                                        </a>
                                        <a class="dropdown-item" href="/Admin/ClassDetails/?ClassId=@item.ClassId">
                                            <i class="la la-folder"></i> Details
                                        </a>
                                        @*<a class="dropdown-item not-confirm" onclick="admin.ActiveDeactiveClass(@item.ClassId, @(!item.Status == true ? "true" : "false"))" href="javascript:void(0);">
                                                <i class="fa fa-ban"></i>@(!item.Status == true ? "Active Class" : "Inactive Class")
                                            </a>*@
                                    </div>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>

<script src="/scripts/buttons.js" type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>





