@model IEnumerable<CMS_Brian.Models.ClassTable>

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg breadcrumb-sec">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-menu__link-icon flaticon-alert-1"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Classes List
            </h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="table-responsive">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>
                            Class Name
                        </th>
                        <th>
                            Class Location
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Class Description
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.ClassId">
                            <td>
                                @item.ClassName
                            </td>
                            <td>
                                @item.LocationName
                            </td>
                            <td>
                                @item.Address
                            </td>
                            <td>
                                @item.ClassDescription
                            </td>
                            <td id="classStatus">
                                @item.Status
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>

<script src="/scripts/buttons.js" type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>





